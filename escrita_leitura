#include <stdio.h>
#include <stdlib.h>

typedef struct {
    char nome[100];
    int matricula;
    int media;
    int faltas;

} Pessoa;

int main()
{
    Pessoa p;

    printf("Digite seu nome: ");
    fflush(stdin);
    gets(p.nome);
    printf("Digite sua matricula: ");
    gets(p.matricula);
    scanf("%d", &p.matricula);
    printf("Digite sua media");
    gets(p.media);
    scanf("%d", &p.media);
    printf("Digite suas faltas");
    gets(p.faltas);
    scanf("%d", &p.faltas);


    FILE *f = fopen("pessoas.bin", "ab");
    fwrite(&p, sizeof(Pessoa), 1, f);
    fclose(f);

    FILE *f = fopen("pessoas.bin", "rb");

    if (!f) {
        printf("Erro ao tentar ler o arquivo.\n");
        exit(1);
    }

    while(fread(&p, sizeof(Pessoa), 1, f)) {
        printf("Ol√° %s, sua matricula eh %d, sua media eh %d, e vc tem %d, faltas \n", p.nome, p.matricula,p.media,p.faltas);
    }

    fclose(f);

    return 0;
